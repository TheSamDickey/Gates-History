{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint", "simple-import-sort", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "no-prototype-builtins": "warn",
    "@typescript-eslint/explicit-module-boundary-types": 0, //off
    "@typescript-eslint/no-explicit-any": 0, //off
    "@typescript-eslint-no-inferrable-types": 0, //off
    "@typescript-eslint/no-namespace": 1, //warning
    "simple-import-sort/imports": "warn",
    "simple-import-sort/exports": "warn",
    "prettier/prettier": 2 //error
  }
}
